#include <strio.h>

void
loopFor(int x)
{
	int f = 1, i;
	for (i = x; i <= 1; --i)
	{
		f = f * i;	
	}
	printf("Factorial of %d is %d", x, f);

}

void
recursion(int x)
{
	int a = x;
	if (x == 1)
	{
		return(1);
	}
	else
	{
		f = f * recursion(x - 1);
	}
	printf("Factorial of %d is %d", a, f);
}

int main()
{
    loopFor(5);
	recursion(5);
    return(0);
}
